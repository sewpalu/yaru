# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#b6d1d1\nbase_color:#272d2d"
# Foreground/background
gtk-color-scheme = "fg_color:#b6d1d1\nbg_color:#272d2d"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#b6d1d1\nselected_bg_color:#424d4d"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#788484\ninsensitive_bg_color:#424d4d"
# Menus
gtk-color-scheme = "menu_color:#424d4d\nmenubar_bg:#272d2d"
gtk-color-scheme = "menubar_fg:#b6d1d1\nmenubar_insensitive_fg:#788484"
# Links
gtk-color-scheme = "link_color:#4a7acc\nvisited_link_color:#5c8cff"
# Treeview headers
gtk-color-scheme = "column_header_color:#272d2d\nhover_column_header_color:#424d4d"
# Window decoration
gtk-color-scheme = "menu_hover_color:#424d4d\nwindow_color:#b6d1d1"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#b6d1d1\ntooltip_bg_color:#272d2d"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1
gtk-icon-sizes="gtk-menu=16,16:\
	gtk-button=16,16:\
	gtk-small-toolbar=16,16:\
	gtk-dnd=16,16:\
	gtk-dialog=16,16"
gtk-toolbar-style = GTK_TOOLBAR_ICONS
gtk-menu-images = 0
gtk-menu-popup-delay = 0

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
